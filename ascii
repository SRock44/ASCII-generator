#!/usr/bin/env python3
"""
ASCII Generator CLI wrapper.
Allows running: ascii art "prompt" instead of python cli.py art "prompt"
"""
import sys
import os

# Add current directory to path
sys.path.insert(0, os.path.dirname(os.path.abspath(__file__)))

# Import and run the CLI
from cli import cli

if __name__ == "__main__":
    cli()
